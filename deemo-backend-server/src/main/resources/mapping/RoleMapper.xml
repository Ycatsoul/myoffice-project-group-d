<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.capgemini.cn.deemo.mapper.RoleMapper">
  
  <!-- 添加一个角色 -->
  <insert id="addRole" parameterType="com.capgemini.cn.deemo.data.domain.Role">
    INSERT INTO Role (roleId, roleName, roleDesc)
    VALUES (#{role.roleId}, #{role.roleName}, #{role.roleDesc})
  </insert>
  
  <!-- 删除一个角色 -->
  <delete id="deleteRole" parameterType="Long">
    DELETE FROM Role WHERE roleId = #{roleId}
  </delete>
  
</mapper>